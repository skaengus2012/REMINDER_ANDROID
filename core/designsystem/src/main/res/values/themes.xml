<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Reminder" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">?bg_1</item>
        <item name="android:windowBackground">?bg_1</item>
        <item name="colorControlHighlight">?bg_ripple_1</item>

        <item name="point_1">@color/point_1</item>
        <item name="point_2">@color/point_2</item>
        <item name="point_3">@color/point_3</item>
        <item name="white">@android:color/white</item>
        <item name="black">@android:color/black</item>
        <item name="red1">@color/red_400</item>
    </style>

    <style name="Theme.Reminder.App" parent="Base.Theme.Reminder">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <item name="bg_1">@color/bg_1_light</item>
        <item name="bg_1_layer">@color/bg_1_light_layer</item>
        <item name="bg_2">@color/bg_2_light</item>
        <item name="bg_2_card">@color/bg_2_card_light</item>
        <item name="bg_2_card_stroke">@color/bg_2_card_stroke_light</item>
        <item name="bg_ripple_1">@color/bg_ripple_1_light</item>
        <item name="bg_line_1">@color/bg_line_1_light</item>
        <item name="bg_line_2">@color/bg_line_2_light</item>
        <item name="bg_placeholder_1">@color/bg_placeholder_1_light</item>
        <item name="content_1">@color/content_1_light</item>
        <item name="content_2">@color/content_2_light</item>
        <item name="content_2_hint">@color/content_2_hint_light</item>
        <item name="content_3">@color/content_3_light</item>
        <item name="content_3_hint">@color/content_3_hint_light</item>
    </style>

</resources>